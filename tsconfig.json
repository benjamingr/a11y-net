{
  "compilerOptions": {
      "sourceMap": true,
      "target": "esnext",
      "strict": true,
      "baseUrl": ".",
      "paths": {
          "*":["*","src/*"]
      },
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es2015", "es2017", "es2018", "es2019"],
      "module": "CommonJS",
      "moduleResolution": "Node"
  },
  "exclude": [
      "node_modules",
  ],

}
